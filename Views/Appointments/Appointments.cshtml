@model IEnumerable<HospitalAppointment.Models.Appointment>

@{
    ViewBag.Title = "Index";
}
<center><h2>Welcome to Patient Appointments page of ABC Hospital</h2></center>
<p>
    @Html.ActionLink("Add Appointment for new Patient", "Create")
</p>
<p>
    Today's appointment count: @ViewBag.count
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PatientName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DoctorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AppointmentDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HealthProblem)
        </th>
        <th>
            Manage Patient Appointments
        </th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.PatientName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DoctorName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AppointmentDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.HealthProblem)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.PatientId }) |
        @Html.ActionLink("Details", "Details", new { id = item.PatientId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.PatientId })
    </td>
</tr>
    }
</table>